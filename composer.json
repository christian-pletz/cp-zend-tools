{
  "name": "christian-pletz/cp-zend-tools",
  "description": "A collection of useful classes for the Zend Framework",
  "license": "MIT",
  "authors": [
    {
      "name": "Christian Pletz",
      "email": "info@christian-pletz.de"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "zf": {
      "component": "Cp\\ZendTools",
      "config-provider": "Cp\\ZendTools\\ConfigProvider"
    }
  },
  "require": {
    "php": "^5.6 || ^7.0",
    "zendframework/zend-stdlib": "^2.7 || ^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.1"
  },
  "autoload": {
    "psr-4": {
      "Cp\\ZendTools\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CpTest\\ZendTools\\": "test/"
    }
  },
  "scripts": {
    "check": [
      "@test"
    ],
    "test": "phpunit"
  }
}
